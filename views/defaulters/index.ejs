<div class="space-y-6 sm:space-y-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <h1 class="text-2xl sm:text-3xl font-bold text-slate-800">Defaulter Management</h1>
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-4 w-full sm:w-auto">
            <a href="/reports/defaulters/pdf" class="inline-flex items-center justify-center gap-2
          w-full sm:w-auto
          bg-slate-900 text-white
          px-6 py-2.5 rounded-xl
          text-sm font-semibold
          shadow-sm
          hover:bg-slate-800
          transition-all duration-300">
                <i class="fa-solid fa-file-pdf"></i>
                Download PDF
            </a>
            <form action="/defaulters" method="GET" class="flex gap-2 w-full sm:w-auto">
                <input type="month" name="month" value="<%= month %>"
                    class="flex-grow sm:flex-grow-0 px-4 py-2 rounded-xl border border-slate-200 outline-none focus:ring-2 focus:ring-[#3A9AFF] text-sm font-medium transition">
                <button type="submit"
                    class="bg-[#3A9AFF] text-white px-5 py-2 rounded-xl text-sm font-bold hover:bg-[#3A9AFF]/90 transition shadow-md italic">Filter</button>
            </form>
        </div>
    </div>

    <!-- Defaulters Table - Clean -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="overflow-x-auto scrollbar-hide py-1">
            <table class="w-full text-left min-w-[700px]">
                <thead class="bg-slate-50 border-b border-slate-200">
                    <tr>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            Member Name</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            Visit Date</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">Fee
                            Amount</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            Billing Month</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                            Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% if (defaulters.length===0) { %>
                        <tr>
                            <td colspan="5" class="px-6 py-16 text-center text-slate-400 text-sm italic">Great job! No
                                defaulters found.</td>
                        </tr>
                        <% } %>
                            <% defaulters.forEach(def=> { %>
                                <tr class="hover:bg-slate-50 transition duration-150 group">
                                    <td class="px-6 py-4 font-bold text-slate-900 text-sm italic">
                                        <%= def.name %>
                                    </td>
                                    <td class="px-6 py-4 text-xs font-medium text-slate-500">
                                        <%= new Date(def.visitDate).toLocaleDateString('en-IN', { day: '2-digit' ,
                                            month: 'short' , year: 'numeric' }) %>
                                    </td>
                                    <td class="px-6 py-4 font-black text-rose-600 text-sm italic">â‚¹<%= def.feeAmount %>
                                    </td>
                                    <td
                                        class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-tighter italic">
                                        <%= def.monthMissing %>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <a href="/member-fees?search=<%= def.name %>"
                                            class="text-[#3A9AFF] hover:text-[#3A9AFF]/80 text-xs font-bold underline">OPEN
                                            RECORD &rarr;</a>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Info Note - Simple -->
    <div class="bg-slate-50 p-4 rounded-2xl border border-slate-200 flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400 flex-shrink-0 mt-0.5" fill="none"
            viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-[11px] sm:text-xs text-slate-600 font-medium italic">
            <strong>Defaulter Policy:</strong> Any member entry with an "Unpaid" status is automatically flagged here.
            Once a payment is confirmed via the Member Entry module, they are instantly removed from this list.
        </p>
    </div>
</div>