<div class="max-w-4xl mx-auto space-y-10">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6">
        <div>
            <h1 class="text-3xl sm:text-4xl font-black text-slate-900 italic tracking-tighter uppercase">Admin Profile
            </h1>
            <p class="text-slate-400 text-sm font-bold mt-1">MANAGE YOUR ACCOUNT CREDENTIALS</p>
        </div>
        <a href="/dashboard"
            class="text-slate-600 hover:text-[#3A9AFF] font-bold text-sm flex items-center gap-2 transition-colors">
            <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <% if (success) { %>
        <div
            class="bg-emerald-50 border border-emerald-200 text-emerald-700 px-6 py-4 rounded-2xl flex items-center gap-4 shadow-sm animate-in fade-in slide-in-from-top-4 duration-500">
            <div
                class="w-10 h-10 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-600 flex-shrink-0">
                <i class="fa-solid fa-check"></i>
            </div>
            <p class="font-bold text-sm">
                <%= success %>
            </p>
        </div>
        <% } %>

            <% if (error) { %>
                <div
                    class="bg-rose-50 border border-rose-200 text-rose-700 px-6 py-4 rounded-2xl flex items-center gap-4 shadow-sm animate-in fade-in slide-in-from-top-4 duration-500">
                    <div
                        class="w-10 h-10 bg-rose-100 rounded-full flex items-center justify-center text-rose-600 flex-shrink-0">
                        <i class="fa-solid fa-xmark"></i>
                    </div>
                    <p class="font-bold text-sm">
                        <%= error %>
                    </p>
                </div>
                <% } %>

                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                        <!-- Account Info Summary -->
                        <div class="lg:col-span-1 space-y-6">
                            <div
                                class="bg-white p-8 rounded-3xl shadow-sm border border-slate-100 text-center space-y-4">
                                <div
                                    class="w-24 h-24 bg-slate-900 rounded-full mx-auto flex items-center justify-center text-white text-4xl font-bold shadow-sm">
                                    <%= (admin.name || admin.username).charAt(0).toUpperCase() %>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-slate-900 tracking-tight">
                                        <%= admin.name || 'Admin User' %>
                                    </h3>
                                    <p class="text-slate-400 text-xs font-bold uppercase tracking-widest mt-1">@<%=
                                            admin.username %>
                                    </p>
                                </div>
                                <div class="pt-4 flex flex-col gap-2">
                                    <div class="flex items-center justify-center gap-2 text-slate-500 text-sm">
                                        <i class="fa-solid fa-phone text-[#3A9AFF]"></i>
                                        <span class="font-medium">
                                            <%= admin.phone || 'No Phone Set' %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-slate-900 p-8 rounded-3xl text-white space-y-4">
                                <h4 class="text-xs font-black uppercase tracking-widest text-slate-500 italic">Security
                                    Status</h4>
                                <div class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
                                    <p class="text-sm font-bold">2FA Enabled (Simulated)</p>
                                </div>
                                <p class="text-xs text-slate-400 leading-relaxed font-medium">Keep your credentials
                                    secure. Avoid sharing your password or login phone number with unauthorized staff
                                    members.</p>
                            </div>
                        </div>

                        <!-- Update Form -->
                        <div class="lg:col-span-2">
                            <div class="bg-white p-8 sm:p-10 rounded-3xl shadow-sm border border-slate-100 h-full">
                                <form action="/profile/update" method="POST" class="space-y-8">
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                                        <div class="space-y-2">
                                            <label
                                                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Full
                                                Display Name</label>
                                            <input type="text" name="name" value="<%= admin.name %>"
                                                placeholder="Enter full name"
                                                class="w-full px-5 py-3.5 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-semibold transition-all bg-slate-50 focus:bg-white">
                                        </div>
                                        <div class="space-y-2">
                                            <label
                                                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Mobile
                                                number</label>
                                            <input type="text" name="phone" value="<%= admin.phone %>"
                                                placeholder="Enter phone"
                                                class="w-full px-5 py-3.5 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-semibold transition-all bg-slate-50 focus:bg-white">
                                        </div>
                                        <div class="space-y-2">
                                            <label
                                                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Account
                                                Username</label>
                                            <input type="text" name="username" value="<%= admin.username %>" required
                                                placeholder="Enter username"
                                                class="w-full px-5 py-3.5 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-semibold transition-all bg-slate-50 focus:bg-white">
                                        </div>
                                        <div class="space-y-2">
                                            <label
                                                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1 text-rose-500">Reset
                                                Password</label>
                                            <input type="password" name="password"
                                                placeholder="Leave blank to keep current"
                                                class="w-full px-5 py-3.5 rounded-2xl border border-rose-100 focus:ring-2 focus:ring-rose-500 outline-none text-sm font-semibold transition-all bg-rose-50/30 focus:bg-white">
                                        </div>
                                    </div>

                                    <div class="pt-6 border-t border-slate-100">
                                        <button type="submit"
                                            class="w-full sm:w-auto bg-slate-900 text-white px-10 py-4 rounded-2xl text-sm font-bold uppercase tracking-widest hover:bg-slate-800 shadow-sm transition-all active:scale-95">
                                            Update Profile Details
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
</div>