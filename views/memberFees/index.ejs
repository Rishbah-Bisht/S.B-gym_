<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-slate-800">Member Entry</h1>
        <p class="text-slate-400 text-[10px] font-bold uppercase tracking-widest mt-1">
            <i class="fa-solid fa-clock-rotate-left mr-1 text-[#3A9AFF]"></i> Showing Latest 5 Members
        </p>
    </div>
    <div class="flex gap-2 w-full sm:w-auto my-4">
        <a href="/reports/fees/pdf?month=<%= month %>"
            class="flex-1 sm:flex-none text-center bg-white text-[#3A9AFF] border border-slate-200 px-5 py-2.5 rounded-xl hover:bg-slate-50 transition font-bold text-sm">
            PDF Export
        </a>
        <button onclick="document.getElementById('entryModal').classList.remove('hidden')"
            class="flex-[2] sm:flex-none bg-indigo-700 text-white px-5 py-2.5 rounded-xl hover:bg-indigo-800 transition font-semibold text-sm">
            + New Member Entry
        </button>
    </div>
</div>

<% if (error) { %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl flex items-center gap-3 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                clip-rule="evenodd" />
        </svg>
        <span>
            <%= error %>
        </span>
    </div>
    <% } %>

        <!-- Filter Bar - Simple -->
        <div class="bg-white p-4 sm:p-5 rounded-2xl shadow-sm border border-slate-200">
            <form action="/member-fees" method="GET" class="flex flex-col md:flex-row gap-4 items-end">
                <div class="w-full md:flex-1">
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-1.5 ml-1">Search Member
                        Name</label>
                    <input type="text" name="search" value="<%= search %>" placeholder="Type name..."
                        class="w-full px-4 py-2.5 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm transition">
                </div>
                <div class="w-full md:w-48">
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-1.5 ml-1">Visit Month</label>
                    <input type="month" name="month" value="<%= month %>"
                        class="w-full px-4 py-2.5 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm transition">
                </div>
                <div class="flex w-full md:w-auto gap-2">
                    <button type="submit"
                        class="flex-1 md:flex-none bg-slate-800 text-white px-8 py-2.5 rounded-xl hover:bg-slate-900 transition font-semibold text-sm">Filter</button>
                    <a href="/member-fees"
                        class="flex-1 md:flex-none text-center bg-slate-100 text-slate-600 px-6 py-2.5 rounded-xl hover:bg-slate-200 transition font-semibold text-sm">Reset</a>
                </div>
            </form>
        </div>

        <!-- Table - Clean -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto scrollbar-hide py-1">
                <table class="w-full text-left min-w-[700px]">
                    <thead class="bg-slate-50 border-b border-slate-200">
                        <tr>
                            <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                Member Account</th>
                            <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                Visit Date</th>
                            <th
                                class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                                Fee amount</th>
                            <th
                                class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-center">
                                Payment status</th>
                            <th
                                class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                                Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        <% if (entries.length===0) { %>
                            <tr>
                                <td colspan="5" class="px-6 py-16 text-center text-slate-400 text-sm italic">No
                                    records found.</td>
                            </tr>
                            <% } %>
                                <% entries.forEach(entry=> { %>
                                    <tr class="hover:bg-slate-50 transition duration-150">
                                        <td class="px-6 py-4">
                                            <div class="font-bold text-slate-900 text-sm italic">
                                                <%= entry.name %>
                                            </div>
                                            <div class="text-[10px] text-slate-400">
                                                <%= entry.phone || 'No Contact' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-xs font-medium text-slate-500">
                                            <%= new Date(entry.visitStartDate).toLocaleDateString('en-IN', {
                                                day: '2-digit' , month: 'short' , year: 'numeric' }) %>
                                        </td>
                                        <td class="px-6 py-4 font-bold text-slate-900 text-sm text-right italic">₹
                                            <%= entry.feeAmount %>
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <span
                                                class="px-2.5 py-1 rounded-full text-[10px] font-black uppercase tracking-wider <%= entry.paymentStatus === 'Paid' ? 'bg-emerald-100 text-emerald-700' : 'bg-rose-100 text-rose-700' %>">
                                                <%= entry.paymentStatus %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <% if (entry.paymentStatus==='Unpaid' ) { %>
                                                <button
                                                    onclick="openPayModal('<%= entry._id %>', '<%= entry.name %>', '<%= entry.feeAmount %>')"
                                                    class="inline-flex items-center gap-2
         px-4 py-2 rounded-xl
         bg-[#3A9AFF] text-white
         text-sm font-semibold
         shadow-md shadow-blue-500/30
         hover:bg-[#3A9AFF]/90
         hover:shadow-lg hover:shadow-blue-500/40
         active:scale-95
         transition-all duration-300">

                                                    Confirm Pay
                                                </button>
                                                <% } else { %>
                                                    <span class="text-[10px] font-bold text-slate-400 uppercase italic">
                                                        <%= entry.paymentMode %>
                                                    </span>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        </div>
        <!-- Member Entry Modal -->
        <div id="entryModal" class="fixed inset-0 z-[200] hidden">
            <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm"
                onclick="this.parentElement.classList.add('hidden')">
            </div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-lg p-6">
                <div class="bg-white rounded-3xl shadow-2xl border border-slate-100 overflow-hidden">
                    <div class="bg-slate-900 p-6 text-white text-center">
                        <h2 class="text-2xl font-bold uppercase tracking-tight">New Member Entry</h2>
                        <p class="text-slate-400 text-xs font-bold uppercase tracking-widest mt-1">Register visitor in
                            database</p>
                    </div>
                    <form action="/member-fees" method="POST" class="p-8 space-y-5">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="col-span-2">
                                <label
                                    class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1.5 ml-1">Full
                                    Name</label>
                                <input type="text" name="name" required
                                    class="w-full px-5 py-3 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-bold transition">
                            </div>
                            <div>
                                <label
                                    class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1.5 ml-1">Phone
                                    Number</label>
                                <input type="text" name="phone"
                                    class="w-full px-5 py-3 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-bold transition">
                            </div>
                            <div>
                                <label
                                    class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1.5 ml-1">Fee
                                    Amount (₹)</label>
                                <input type="number" name="feeAmount" required
                                    class="w-full px-5 py-3 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-bold transition">
                            </div>
                            <div class="col-span-2">
                                <label
                                    class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1.5 ml-1">Visit
                                    Start</label>
                                <input type="date" name="visitStartDate"
                                    value="<%= new Date().toISOString().split('T')[0] %>" required
                                    class="w-full px-5 py-3 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-bold transition">
                            </div>
                        </div>
                        <div class="flex gap-3 pt-4">
                            <button type="button"
                                onclick="document.getElementById('entryModal').classList.add('hidden')"
                                class="flex-1 px-6 py-3.5 rounded-2xl bg-slate-100 text-slate-500 text-sm font-black uppercase tracking-widest hover:bg-slate-200 transition">Cancel</button>
                            <button type="submit"
                                class="flex-[2] px-6 py-3.5 rounded-2xl bg-[#3A9AFF] text-white text-sm font-black uppercase tracking-widest hover:bg-[#3A9AFF]/90 shadow-lg shadow-blue-500/30 transition">Save
                                Entry</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Payment Processing Modal -->
        <div id="payModal" class="fixed inset-0 z-[200] hidden">
            <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm"
                onclick="this.parentElement.classList.add('hidden')">
            </div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-md p-6">
                <div class="bg-white rounded-3xl shadow-2xl border border-slate-100 overflow-hidden">
                    <div class="bg-slate-900 p-6 text-white text-center">
                        <h2 class="text-2xl font-bold uppercase tracking-tight">Process Payment</h2>
                        <p id="payMemberName" class="text-slate-400 text-xs font-bold uppercase tracking-widest mt-1">
                            Member Name</p>
                    </div>
                    <form id="payForm" method="POST" class="p-8 space-y-6">
                        <div>
                            <label
                                class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 ml-1">Payment
                                Amount</label>
                            <div id="payAmountDisplay" class="text-3xl font-black text-slate-900 italic">₹0</div>
                        </div>
                        <div>
                            <label
                                class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1.5 ml-1">Select
                                Mode</label>
                            <select name="paymentMode" required
                                class="w-full px-5 py-3 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-bold transition">
                                <option value="Cash">Cash</option>
                                <option value="UPI / Online">UPI / Online</option>
                                <option value="Card">Card</option>
                            </select>
                        </div>
                        <div>
                            <label
                                class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1.5 ml-1">Admin
                                Password Pin</label>
                            <input type="password" name="adminPassword" placeholder="Required for security" required
                                class="w-full px-5 py-3 rounded-2xl border border-slate-200 focus:ring-2 focus:ring-[#3A9AFF] outline-none text-sm font-bold transition">
                        </div>
                        <div class="flex gap-3 pt-2">
                            <button type="button" onclick="document.getElementById('payModal').classList.add('hidden')"
                                class="flex-1 px-6 py-3.5 rounded-2xl bg-slate-100 text-slate-500 text-sm font-black uppercase tracking-widest hover:bg-slate-200 transition">Back</button>
                            <button type="submit"
                                class="flex-[2] px-6 py-3.5 rounded-2xl bg-emerald-600 text-white text-sm font-black uppercase tracking-widest hover:bg-emerald-700 shadow-lg shadow-emerald-500/30 transition">Confirm
                                Payment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            function openPayModal(id, name, amount) {
                document.getElementById('payMemberName').innerText = name;
                document.getElementById('payAmountDisplay').innerText = '₹' + amount;
                document.getElementById('payForm').action = '/member-fees/pay/' + id;
                document.getElementById('payModal').classList.remove('hidden');
            }
        </script>